<Window x:Class="OrionManager.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:OrionManager.ViewModels"
        mc:Ignorable="d"
        Title="MoOr - The Board Game App"
        x:ClassModifier="internal"
        ResizeMode="NoResize"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None">

    <Window.Background>
        <ImageBrush
            ImageSource="pack://application:,,,/OrionManager;component/Views/Resources/Images/OrionShipsBack.jpg" />
    </Window.Background>

    <d:Window.DataContext>
        <viewModels:MainViewModel />
    </d:Window.DataContext>

    <ContentControl Content="{Binding CurrentRegion, Mode=OneWay}" />

</Window>