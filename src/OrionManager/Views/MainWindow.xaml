<Window x:Class = "OrionManager.Views.MainWindow"
        xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d = "http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc = "http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:main = "clr-namespace:OrionManager.ViewModels.Main"
        xmlns:constants = "clr-namespace:OrionManager.Constants"
        mc:Ignorable = "d"
        Title = "MoOr - The Board Game App"
        x:ClassModifier = "internal"
        ResizeMode = "NoResize"
        WindowState = "Maximized"
        WindowStartupLocation = "CenterScreen"
        WindowStyle = "None">

    <d:Window.DataContext>
        <main:MainViewModel />
    </d:Window.DataContext>

    <Grid>
        <ContentControl Content = "{Binding CurrentRegionBackground, Mode=OneWay}" />
        <ContentControl Margin = "{x:Static constants:UiSizes.OuterSpacingThickness}"
                        Content = "{Binding CurrentRegion, Mode=OneWay}" />
    </Grid>

</Window>